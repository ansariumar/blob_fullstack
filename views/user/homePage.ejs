<!-- This is the homepage -->

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">

	<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>WeTu</title>
</head>
<body>
	<div class="container">
		<h1 class="mb-4">Blob Articles</h1>

						<!-- all the articles for the blog sorted by date -->
		<% articles.forEach(article => { %>
			<div class="card mt-4">
				<div class="card-body">

					<h4 class="card-title"> <%= article.title %> </h4>	
					<div class="card-subtitle text-muted mb-2"> <%=article.date.toLocaleDateString()%> </div>
					<div class="card-text mb-2"> <%=article.description%> </div>
					<a href="/blog/<%= article.slug %>" class="btn btn-primary"> Read More </a>

				</div>
			</div>
		<% }) %>

	</div>
</body>
</html>